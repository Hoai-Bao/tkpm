<div class="title d-flex justify-content-between">
    <div class="title-child">
        <h1>Academy <small>list of student</small></h1>
    </div>
    <button type="button" class="btn btn-dark mt-2" data-target="#addstudent" data-toggle="modal">Add new here <i
            class="fas fa-plus-circle"></i></button>
</div>
<div class="input-group col-md-4" id="chooseclass">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect01">Class</label>
  </div>
  <select class="custom-select" id="inputGroupSelect01">
    {{{selected Class check}}}
  </select>
</div>
<div class="modal" id="addstudent">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add new student</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action="/student/new" id="addstudentcc" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Name">Name</label>
                            <input type="text" name="name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Birthday">Birthday</label>
                            <input type="date" name="birthday" class="form-control" id="datepicker">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="class">Class</label>
                        <select id="class" class="form-control" name='class'>
                            <option value='-1' selected>Choose...</option>
                            {{#each Class}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" name="address" class="form-control">
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="submit3">Submit</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<div class="row col-md col-md-offset-2 custyle mt-2">
    <table class="table table-striped custab" id='tablestudent'>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Birthday</th>
                <th>Class</th>
                <th>Address</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        {{#if students}}
        {{{studentdata students}}}
        {{else}}
        <tr class='text-center'>
            <h4>Dont have any student!! Please create new</h4>
        </tr>
        {{/if}}
    </table>
</div>
<button id="test" onclick="clone()" class='btn btn-warning'> Clone</button>

<button type="button" id='editinvisible' class="invisible" data-target="#updateStudent" data-toggle="modal"></button>
<div class="modal" id="updateStudent">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Add new student</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form action="/student/update" id="updatestudentcc" method="PUT">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Name">Name</label>
                            <input type="text" id='nameU' name="name" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="Birthday">Birthday</label>
                            <input type="date" name="birthday" class="form-control" id="datepickerU">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="class">Class</label>
                        <select id="classU" class="form-control" name='class'>
                            <option value='-1' selected>Choose...</option>
                            {{#each Class}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" name="address" class="form-control" id="addressU">
                    </div>
                </form>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" id="submit1">Submit</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>